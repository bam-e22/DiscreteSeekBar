<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DiscreteSeekBar">

        <!-- Value -->
        <attr name="discrete_seekbar_minValue" format="integer|reference" />
        <attr name="discrete_seekbar_maxValue" format="integer|reference" />
        <attr name="discrete_seekbar_sectionCount" format="integer|reference" />
        <attr name="discrete_seekbar_value" format="integer|reference" />

        <!-- Track -->
        <attr name="discrete_seekbar_trackWidth" format="dimension|reference" />
        <attr name="discrete_seekbar_trackColor" format="integer|reference" />

        <!-- TickMark -->
        <attr name="discrete_seekbar_tickMarkTopMargin" format="dimension|reference" />
        <attr name="discrete_seekbar_tickMarkTextSize" format="dimension|reference" />
        <attr name="discrete_seekbar_tickMarkTextColor" format="integer|reference" />
        <attr name="discrete_seekbar_tickMarkDrawable" format="reference" />

        <!-- Thumb -->
        <attr name="discrete_seekbar_thumbDefaultSize" format="dimension|reference" />
        <attr name="discrete_seekbar_thumbPressedSize" format="dimension|reference" />
        <attr name="discrete_seekbar_thumbColor" format="integer|reference" />

        <!-- Touch Event -->
        <attr name="discrete_seekbar_trackTouchEnable" format="boolean" />

    </declare-styleable>
</resources>