<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DiscreteSeekBar">

        <!-- Value -->
        <attr name="DiscreteSeekBar_value" format="integer|reference" />
        <attr name="DiscreteSeekBar_maxValue" format="integer|reference" />
        <attr name="DiscreteSeekBar_minValue" format="integer|reference" />
        <attr name="DiscreteSeekBar_sectionCount" format="integer|reference" />

        <!-- Track -->
        <attr name="DiscreteSeekBar_trackWidth" format="dimension|reference" />
        <attr name="DiscreteSeekBar_trackColor" format="integer|reference" />

        <!-- TickMark -->
        <attr name="DiscreteSeekBar_tickMarkTopMargin" format="dimension|reference" />
        <attr name="DiscreteSeekBar_tickMarkTextSize" format="dimension|reference" />
        <attr name="DiscreteSeekBar_tickMarkTextColor" format="integer|reference" />
        <attr name="DiscreteSeekBar_tickMarkDrawable" format="reference" />

        <!-- Thumb -->
        <attr name="DiscreteSeekBar_thumbDefaultSize" format="dimension|reference" />
        <attr name="DiscreteSeekBar_thumbPressedSize" format="dimension|reference" />
        <attr name="DiscreteSeekBar_thumbColor" format="integer|reference" />

        <!-- Touch Event -->
        <attr name="DiscreteSeekBar_trackTouchEnable" format="boolean" />

    </declare-styleable>
</resources>