<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DiscreteSeekBar">

        <!-- Value -->
        <attr name="attr_minValue" format="integer|reference" />
        <attr name="attr_maxValue" format="integer|reference" />
        <attr name="attr_sectionCount" format="integer|reference" />
        <attr name="attr_value" format="integer|reference" />

        <!-- Track -->
        <attr name="attr_trackWidth" format="dimension|reference" />
        <attr name="attr_trackColor" format="integer|reference" />

        <!-- TickMark -->
        <attr name="attr_tickMarkTopMargin" format="dimension|reference" />
        <attr name="attr_tickMarkTextSize" format="dimension|reference" />
        <attr name="attr_tickMarkTextColor" format="integer|reference" />
        <attr name="attr_tickMarkDrawable" format="reference" />

        <!-- Thumb -->
        <attr name="attr_thumbDefaultSize" format="dimension|reference" />
        <attr name="attr_thumbPressedSize" format="dimension|reference" />
        <attr name="attr_thumbColor" format="integer|reference" />

        <!-- Touch Event -->
        <attr name="attr_trackTouchEnable" format="boolean" />

    </declare-styleable>
</resources>